@model CRUD_Alumnos.Models.Alumno

@{
    ViewBag.Title = "Detalle Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalle Alumno</h2>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Completo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>      

        <dt>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sexo)
        </dd>

        <dt>
            Ciudad
        </dt>
        <dd>@CRUD_Alumnos.Controllers.AlumnoController.NombreCiudad(Model.CodCiudad)</dd>
